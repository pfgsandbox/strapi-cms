{
  "kind": "collectionType",
  "collectionName": "authors",
  "info": {
    "singularName": "author",
    "pluralName": "authors",
    "displayName": "Authors",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "first_name": {
      "type": "string",
      "required": true
    },
    "last_name": {
      "type": "string",
      "required": true
    },
    "email": {
      "type": "email",
      "required": true,
      "unique": true
    },
    "title": {
      "type": "string",
      "required": true
    },
    "url": {
      "type": "string"
    },
    "hash": {
      "type": "text"
    },
    "summary": {
      "type": "string",
      "required": true
    },
    "experience_highlights": {
      "type": "string"
    },
    "education": {
      "type": "string",
      "required": true
    },
    "social_media": {
      "type": "json"
    },
    "press": {
      "type": "json"
    },
    "profile_image": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "isJunior": {
      "type": "boolean",
      "required": true
    },
    "challenges": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::challenge.challenge",
      "mappedBy": "author"
    },
    "expertises": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::expertise.expertise",
      "mappedBy": "author"
    },
    "office": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::office.office"
    },
    "articles": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::article.article",
      "inversedBy": "authors"
    }
  }
}
